<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
            {% for style in encore_entry_css_files('style') %}
                {#{{ dump(style) }}#}
                <link rel="stylesheet" href="{{ asset(style) }}">
            {% endfor %}
        {% endblock %}
    </head>
    <body>
        <div id="app">
           {#<span v-bind:title="message"> ${message} </span><br>#}
            <ol>
                <li v-for="m in messages">${m.text}</li>
            </ol>
            <input type="text" v-model="message">
            <button v-on:click="addMessage"> add</button>

        </div>
        {% block body %}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('vue') }}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
